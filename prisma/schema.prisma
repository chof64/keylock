// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

// Necessary for Next auth
model Account {
    id                       String  @id @default(cuid())
    userId                   String
    type                     String
    provider                 String
    providerAccountId        String
    refresh_token            String?
    access_token             String?
    expires_at               Int?
    token_type               String?
    scope                    String?
    id_token                 String?
    session_state            String?

    user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    accounts      Account[]
    sessions      Session[]
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

// Model for physical or virtual keys
model Key {
  id        String   @id @default(cuid())
  keyId     String   @unique // RFID Tag ID
  name      String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  keyUserId String?  @unique // Foreign key to KeyUser, a key can only be assigned to one user
  keyUser   KeyUser? @relation(fields: [keyUserId], references: [id], onDelete: SetNull)
}

model KeyUser {
  id               String  @id @default(cuid())
  name             String
  email            String? @unique
  isActive         Boolean @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @default(now())
  platformUserId   String? // For future integration with a central user management
  key              Key? // Relation to the Key model

  roomPermissions KeyUserRoomPermission[] // Permissions for rooms
  accessLogs      AccessLog[] // Access logs initiated by this user
}

model Node {
  id        String   @id @default(cuid())
  name      String?
  lastSeen  DateTime @default(now())
  roomId    String?
  ipAddress String? // Optional: IP address of the node
  macAddress String? // Optional: MAC address of the node
  signalStrength String?
  uptime    String? // Optional: Uptime in seconds
  room      Room?    @relation(fields: [roomId], references: [id], onDelete: SetNull) // Node belongs to one Room

  accessLogs AccessLog[] // Access logs related to this node
}

model Room {
  id                 String                    @id @default(cuid())
  name               String
  createdAt          DateTime                  @default(now())
  updatedAt          DateTime                  @updatedAt
  nodes              Node[] // Room can have multiple Nodes
  keyUserPermissions KeyUserRoomPermission[] // Permissions for key users in this room
  accessLogs         AccessLog[]               // Access logs related to this room
}

// Renamed and updated join table for KeyUser and Room many-to-many relationship
model KeyUserRoomPermission {
    keyUserId String
    roomId    String
    keyUser   KeyUser @relation(fields: [keyUserId], references: [id], onDelete: Cascade)
    room      Room    @relation(fields: [roomId], references: [id], onDelete: Cascade)

    assignedAt DateTime @default(now())
    assignedBy String? // Optional: to track who assigned the permission

    @@id([keyUserId, roomId])
}

// New model for Access Logs
model AccessLog {
  id            String    @id @default(cuid())
  timestamp     DateTime  @default(now())
  accessGranted Boolean
  reason        String?
  rfidTag       String
  keyUserId     String?
  keyUser       KeyUser?  @relation(fields: [keyUserId], references: [id], onDelete: SetNull)
  nodeId        String
  node          Node      @relation(fields: [nodeId], references: [id], onDelete: Cascade)
  roomId        String?
  room          Room?     @relation(fields: [roomId], references: [id], onDelete: SetNull)

  @@index([keyUserId])
  @@index([nodeId])
  @@index([roomId])
  @@index([timestamp])
}
